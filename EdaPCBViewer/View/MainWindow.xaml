<Window 
    x:Class="MikroPic.EdaTools.v1.BoardEditor.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:MikroPic.EdaTools.v1.BoardEditor.View"
    Title="{Binding Title}" 
    Height="350" 
    Width="525">
    <DockPanel>
               
        <Menu
            DockPanel.Dock="Top"
            IsMainMenu="True">
            <MenuItem
                Header="Files">
                <MenuItem
                    Header="New"
                    Command="{Binding NewCommand}"/>
                <MenuItem
                    Header="Open..."
                    Command="{Binding OpenCommand}"/>
                <MenuItem
                    Header="Save"
                    Command="{Binding SaveCommand}"/>
                <MenuItem
                    Header="Save as..."
                    Command="{Binding SaveAsCommand}"/>
                <Separator/>
                <MenuItem
                    Header="Exit"
                    Command="{Binding ExitCommand}"/>
            </MenuItem>
        </Menu>
       
        <Border
            x:Name="_this"
            Margin="5"
            Padding="5"
            BorderThickness="1"
            Background="Black">
            <views:BoardEditorView
                x:Name="content"
                ClipToBounds="True"
                SnapsToDevicePixels="True"
                Background="Transparent"
                Board="{Binding Board}">
            </views:BoardEditorView>
        </Border>
    </DockPanel>
</Window>
    
