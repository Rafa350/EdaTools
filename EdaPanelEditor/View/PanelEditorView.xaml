<UserControl x:Class="MikroPic.EdaTools.v1.PanelEditor.View.PanelEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MikroPic.EdaTools.v1.PanelEditor.DrawEditor"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             x:Name="control">
    <Grid
        Background="#FF424242">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <local:ContentBox
            x:Name="contentBox" 
            Grid.Column="1"
            Grid.Row="1">
            <local:ContentBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1" ScaleY="-1"/>
                    <TranslateTransform Y="{Binding ElementName=contentBox, Path=ActualHeight}"/>
                </TransformGroup>
            </local:ContentBox.RenderTransform>
        </local:ContentBox>
        <local:RulerBox
            x:Name="hRulerBox"
            Grid.Column="1"
            Grid.Row="0"
            FlipTags="None"
            FontSize="14"
            ScaleFactor="1000000"
            ShowRegion="True"
            ShowPointer="True"
            RulerAlignment="Bottom">
        </local:RulerBox>
        <local:RulerBox
            x:Name="vRulerBox"
            Grid.Column="0"
            Grid.Row="1"
            FlipTags="Vertical"
            FontSize="14"
            ScaleFactor="1000000"
            ShowRegion="True"
            ShowPointer="True"
            RulerAlignment="Top">
            <local:RulerBox.LayoutTransform>
                <TransformGroup>
                    <RotateTransform Angle="90"/>
                    <ScaleTransform ScaleX="1" ScaleY="-1"/>
                    <TranslateTransform Y="{Binding ElementName=vRulerBox, Path=ActualHeight}"/>
                </TransformGroup>
            </local:RulerBox.LayoutTransform>
        </local:RulerBox>
        <ScrollBar        
            x:Name="vScroller"
            Grid.Column="2"
            Grid.Row="1"
            Orientation="Vertical"
            VerticalAlignment="Stretch"
            Width="Auto"
            LargeChange="10"
            Maximum="100"
            SmallChange="1"
            Value="0" />
        <ScrollBar
            x:Name="hScroller"
            Grid.Column="1"
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Stretch"
            Width="Auto"
            Maximum="100"
            LargeChange="10"
            SmallChange="1" />
    </Grid>
</UserControl>
