<Window 
    x:Class="MikroPic.EdaTools.v1.PanelEditor.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:MikroPic.EdaTools.v1.PanelEditor.View"
    xmlns:viewModels="clr-namespace:MikroPic.EdaTools.v1.PanelEditor.ViewModel"
    Height="350"
    Width="525">
    <Window.Resources>
        <viewModels:MainViewModel x:Key="ViewModel"/>
    </Window.Resources>
    <Window.Title>
        <Binding Source="{StaticResource ViewModel}" Path="Title"/>
    </Window.Title>
    <DockPanel
        DataContext="{StaticResource ViewModel}">
        <Menu
            DockPanel.Dock="Top"
            IsMainMenu="True">
            <MenuItem
                Header="Files">
                <MenuItem
                    Header="New"
                    Command="{Binding NewCommand}"/>
                <MenuItem
                    Header="Open..."
                    Command="{Binding OpenCommand}"/>
                <MenuItem
                    Header="Save"
                    Command="{Binding SaveCommand}"/>
                <MenuItem
                    Header="Save as..."
                    Command="{Binding SaveAsCommand}"/>
                <Separator/>
                <MenuItem
                    Header="Exit"
                    Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem
                Header="Items">
                <MenuItem 
                    Header="Board"/>
                <MenuItem
                    Header="Cut"/>
            </MenuItem>
        </Menu>

        <Border
            DockPanel.Dock="Left">
            <views:PanelTreeView
                Project="{Binding Project}"/>
        </Border>
        
        <Border
            x:Name="_this"
            Margin="5"
            Padding="5"
            BorderThickness="1"
            Background="Black">
            <views:PanelEditorView
                x:Name="content"
                ClipToBounds="True"
                SnapsToDevicePixels="True"
                Background="Transparent"                
                Project="{Binding Project}"/>
        </Border>
    </DockPanel>
</Window>
    
